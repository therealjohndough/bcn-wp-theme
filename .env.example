# BCN Theme Environment Configuration
# Copy this file to .env and update with your actual values

# Staging Environment
SG_HOST=staging6.buffalocannabisnetwork.com
SG_USER=deploy
SG_PORT=22
SG_REMOTE_PATH=/public_html/wp-content/themes/bcn-wp-theme
SG_DEPLOY_KEY=your_staging_ssh_private_key_here

# Production Environment
PROD_HOST=buffalocannabisnetwork.com
PROD_USER=deploy
PROD_PORT=22
PROD_REMOTE_PATH=/public_html/wp-content/themes/bcn-wp-theme
PROD_DEPLOY_KEY=your_production_ssh_private_key_here

# GitHub Actions Secrets (for CI/CD)
# These should be set in your GitHub repository secrets
# SG_DEPLOY_KEY=your_staging_ssh_private_key_here
# PROD_DEPLOY_KEY=your_production_ssh_private_key_here
# SG_HOST=staging6.buffalocannabisnetwork.com
# SG_USER=deploy
# SG_PORT=22
# SG_REMOTE_PATH=/public_html/wp-content/themes/bcn-wp-theme
# PROD_HOST=buffalocannabisnetwork.com
# PROD_USER=deploy
# PROD_PORT=22
# PROD_REMOTE_PATH=/public_html/wp-content/themes/bcn-wp-theme

# Monitoring Configuration
MONITORING_ENABLED=true
PERFORMANCE_THRESHOLD=3.0
ACCESSIBILITY_THRESHOLD=90

# Testing Configuration
SKIP_TESTS=false
RUN_PERFORMANCE_TESTS=true
RUN_ACCESSIBILITY_TESTS=true

# Notification Configuration (optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
EMAIL_NOTIFICATIONS=false
NOTIFICATION_EMAIL=your_email@example.com