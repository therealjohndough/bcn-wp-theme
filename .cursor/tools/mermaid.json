{
  "mermaid": {
    "enabled": true,
    "version": "10.6.1",
    "themes": {
      "default": "base",
      "dark": "dark",
      "bcn": {
        "primaryColor": "#4A90E2",
        "primaryTextColor": "#1A1A1A",
        "primaryBorderColor": "#D31C95",
        "lineColor": "#4A90E2",
        "secondaryColor": "#FFFFFF",
        "tertiaryColor": "#D31C95"
      }
    },
    "diagrams": {
      "memberFlow": {
        "path": ".cursor/diagrams/member-flow.md",
        "description": "Member registration and engagement flow",
        "type": "flowchart"
      },
      "eventProcess": {
        "path": ".cursor/diagrams/event-process.md", 
        "description": "Event creation and management process",
        "type": "flowchart"
      },
      "contentWorkflow": {
        "path": ".cursor/diagrams/content-workflow.md",
        "description": "Content creation and publishing workflow",
        "type": "flowchart"
      },
      "systemArchitecture": {
        "path": ".cursor/diagrams/system-architecture.md",
        "description": "BCN system architecture and components",
        "type": "graph"
      },
      "deploymentPipeline": {
        "path": ".cursor/diagrams/deployment-pipeline.md",
        "description": "CI/CD deployment pipeline",
        "type": "gitgraph"
      },
      "databaseSchema": {
        "path": ".cursor/diagrams/database-schema.md",
        "description": "WordPress database relationships",
        "type": "erDiagram"
      },
      "userJourney": {
        "path": ".cursor/diagrams/user-journey.md",
        "description": "User journey through BCN website",
        "type": "journey"
      },
      "memberDirectory": {
        "path": ".cursor/diagrams/member-directory.md",
        "description": "Member directory filtering and display logic",
        "type": "flowchart"
      }
    },
    "config": {
      "theme": "bcn",
      "themeVariables": {
        "primaryColor": "#4A90E2",
        "primaryTextColor": "#1A1A1A",
        "primaryBorderColor": "#D31C95",
        "lineColor": "#4A90E2",
        "secondaryColor": "#FFFFFF",
        "tertiaryColor": "#D31C95",
        "background": "#FFFFFF",
        "mainBkg": "#FFFFFF",
        "secondBkg": "#F8F9FA",
        "tertiaryBkg": "#E9ECEF"
      },
      "flowchart": {
        "htmlLabels": true,
        "curve": "basis"
      },
      "sequence": {
        "diagramMarginX": 50,
        "diagramMarginY": 10,
        "actorMargin": 50,
        "width": 150,
        "height": 65,
        "boxMargin": 10,
        "boxTextMargin": 5,
        "noteMargin": 10,
        "messageMargin": 35
      },
      "gantt": {
        "titleTopMargin": 25,
        "barHeight": 20,
        "fontSize": 11,
        "gridLineStartPadding": 35,
        "bottomPadding": 25
      }
    },
    "autoRender": true,
    "watchFiles": [
      ".cursor/diagrams/**/*.md",
      "docs/**/*.md",
      "README.md"
    ]
  }
}