{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.php",
      "options": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false
      }
    },
    {
      "files": "*.css",
      "options": {
        "printWidth": 120,
        "tabWidth": 2
      }
    },
    {
      "files": "*.scss",
      "options": {
        "printWidth": 120,
        "tabWidth": 2
      }
    }
  ]
}