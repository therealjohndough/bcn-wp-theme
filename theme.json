{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "title": "Buffalo Cannabis Network Theme",
    "settings": {
        "color": {
            "palette": [
                {
                    "color": "#1a1a1a",
                    "name": "Black",
                    "slug": "black"
                },
                {
                    "color": "#ffffff",
                    "name": "White",
                    "slug": "white"
                },
                {
                    "color": "#2d5016",
                    "name": "Forest Green",
                    "slug": "forest-green"
                },
                {
                    "color": "#4a7c59",
                    "name": "Sage Green",
                    "slug": "sage-green"
                },
                {
                    "color": "#8fbc8f",
                    "name": "Light Green",
                    "slug": "light-green"
                },
                {
                    "color": "#f4f4f4",
                    "name": "Light Gray",
                    "slug": "light-gray"
                },
                {
                    "color": "#666666",
                    "name": "Medium Gray",
                    "slug": "medium-gray"
                },
                {
                    "color": "#333333",
                    "name": "Dark Gray",
                    "slug": "dark-gray"
                }
            ],
            "custom": true,
            "customDuotone": true,
            "customGradient": true,
            "link": true
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
                    "name": "System Font",
                    "slug": "system-font"
                },
                {
                    "fontFamily": "'Georgia', 'Times New Roman', serif",
                    "name": "Serif",
                    "slug": "serif"
                }
            ],
            "fontSizes": [
                {
                    "name": "Small",
                    "size": "14px",
                    "slug": "small"
                },
                {
                    "name": "Medium",
                    "size": "16px",
                    "slug": "medium"
                },
                {
                    "name": "Large",
                    "size": "20px",
                    "slug": "large"
                },
                {
                    "name": "Extra Large",
                    "size": "24px",
                    "slug": "x-large"
                },
                {
                    "name": "Huge",
                    "size": "32px",
                    "slug": "huge"
                }
            ],
            "customFontSize": true,
            "lineHeight": true,
            "textDecoration": true,
            "textTransform": true,
            "letterSpacing": true
        },
        "spacing": {
            "spacingScale": {
                "steps": 0
            },
            "spacingSizes": [
                {
                    "name": "Small",
                    "size": "0.5rem",
                    "slug": "small"
                },
                {
                    "name": "Medium",
                    "size": "1rem",
                    "slug": "medium"
                },
                {
                    "name": "Large",
                    "size": "2rem",
                    "slug": "large"
                },
                {
                    "name": "Extra Large",
                    "size": "3rem",
                    "slug": "x-large"
                }
            ],
            "customSpacingSize": true,
            "units": ["px", "em", "rem", "vh", "vw", "%"]
        },
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1400px"
        },
        "appearanceTools": true,
        "useRootPaddingAwareAlignments": true
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--color--black)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--system-font)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "spacing": {
            "padding": {
                "top": "var(--wp--preset--spacing--medium)",
                "bottom": "var(--wp--preset--spacing--medium)"
            }
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--forest-green)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--sage-green)"
                    }
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--forest-green)",
                    "text": "var(--wp--preset--color--white)"
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)"
                },
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--small)",
                        "bottom": "var(--wp--preset--spacing--small)",
                        "left": "var(--wp--preset--spacing--medium)",
                        "right": "var(--wp--preset--spacing--medium)"
                    }
                }
            },
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--serif)",
                    "lineHeight": "1.2"
                }
            }
        },
        "blocks": {
            "core/group": {
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--large)",
                        "bottom": "var(--wp--preset--spacing--large)"
                    }
                }
            },
            "core/cover": {
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--x-large)",
                        "bottom": "var(--wp--preset--spacing--x-large)"
                    }
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        }
    ]
}